module StackMachine
  module OP
    ADD = 0x00
    SUB = 0x01
    MUL = 0x02
    DIV = 0x03
    POW = 0x04
    REM = 0x05

    SHR = 0x08
    SHL = 0x09
    NOT = 0x0A
    XOR = 0x0B
    OR = 0x0C
    AND = 0x0D

    INCR = 0x0E
    DECR = 0x0F
    INC = 0x10
    DEC = 0x11

    LOADR = 0x12
    LOAD = 0x13
    RLOAD = 0x14
    STORE = 0x15
    STORER = 0x16
    MOV = 0x17

    PUSHR = 0x18
    PUSH = 0x19
    POP = 0x1A

    CMP = 0x1B
    LT = 0x1C
    GT = 0x1D

    JZ = 0x1E
    JNZ = 0x1F
    JMP = 0x20
    CALL = 0x21
    RET = 0x22

    PREG = 0x23
    PTOP = 0x24

    HALT = 0x25
    NOP = 0x26

    @[AlwaysInline]
    def self.valid(instruction : Int32)
      instruction >= 0 && instruction <= 0x28
    end
  end
end
